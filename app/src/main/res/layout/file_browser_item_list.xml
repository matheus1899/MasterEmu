<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:maxHeight="100dp"
    android:minHeight="75dp"
    android:paddingHorizontal="8dp"
    android:paddingBottom="4dp"
    android:layout_margin="2dp"
    android:background="@drawable/bg_item_file_browser_states">
    <ImageView
        android:id="@+id/file_browser_item_list_img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/ic_file"/>
    <TextView
        android:id="@+id/file_browser_item_list_txt"
        app:layout_constraintTop_toBottomOf="@id/file_browser_item_list_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/TextViewItemFile"/>
</androidx.constraintlayout.widget.ConstraintLayout>