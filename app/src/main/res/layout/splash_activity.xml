<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_ms_cover_portrait"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/splash_img_logo"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/ic_launcher"
        app:layout_constraintBottom_toTopOf="@+id/splash_txt_appname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/splash_h_guideline1" />

    <TextView
        android:id="@+id/splash_txt_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/dancing_script"
        android:text="by"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/splash_txt_creator"
        app:layout_constraintEnd_toStartOf="@+id/splash_txt_creator"
        app:layout_constraintTop_toTopOf="@+id/splash_txt_creator" />

    <TextView
        android:id="@+id/splash_txt_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro"
        android:text="Phillip Potter"
        android:textSize="20sp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/splash_img_gamegear"
        app:layout_constraintEnd_toEndOf="@id/splash_txt_appname"
        app:layout_constraintStart_toStartOf="@id/splash_txt_appname"
        app:layout_constraintTop_toBottomOf="@+id/splash_txt_appname" />

    <TextView
        android:id="@+id/splash_txt_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro"
        android:text="@string/app_name"
        android:textSize="42sp"
        app:layout_constraintBottom_toTopOf="@+id/splash_txt_creator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_img_logo" />

    <ImageView
        android:id="@+id/splash_img_gamegear"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_logo_gg"
        app:layout_constraintBottom_toTopOf="@id/splash_img_sega"
        app:layout_constraintEnd_toStartOf="@+id/splash_img_mastersystem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_txt_creator" />

    <ImageView
        android:id="@+id/splash_img_mastersystem"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_logo_ms"
        app:layout_constraintBottom_toBottomOf="@+id/splash_img_gamegear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/splash_img_gamegear"
        app:layout_constraintTop_toTopOf="@+id/splash_img_gamegear" />

    <ImageView
        android:id="@+id/splash_img_sega"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_sega_icon"
        app:layout_constraintBottom_toTopOf="@+id/splash_h_guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_img_gamegear" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/splash_h_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.18" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/splash_h_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.82" />
</androidx.constraintlayout.widget.ConstraintLayout>